<div class="container">
  <%= form_for @restaurant do |f| %>
    <%= f.label :name, "Enter a name" %>
    <%= f.text_field :name %>
    <%= f.label :address, "Enter an address" %>
    <%= f.text_field :address %>
    <%= f.label :phone_number, "Enter an phone" %>
    <%= f.text_field :phone_number %>
    <%= f.label :category, "Enter an category" %>
    <%= f.text_field :category %>
    <%= f.submit %>
  <% end %>
</div>
